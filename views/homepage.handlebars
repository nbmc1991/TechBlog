<!-- Loop over each object in the projects array -->

<div class="posts">
    {{#each blogs as |blog|}}
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>
                <a href="/blog/{{blog.id}}">{{blog.title}}</a>
            </h2>
            <div>
                Posted by {{User.name}} on {{blog.date_created}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </article>
    {{/each}}
</div>