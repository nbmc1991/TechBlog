<div class="card text-white bg-secondary mb-3 edit-post">
    <div class="card-header">
        <h2>Edit Blog</h2>
    </div>
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="title">Title</label>
                <textarea class="form-control" id="title" rows="1">{{title}}</textarea>
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" rows="3">{{content}}</textarea>
            </div>
        </form>
    </div>
    <div class="divBtn">
        <p>
            <button type="submit" class="btn btn-sm btn-danger updatePostBtn" update-id="{{id}}">Update</button>
            <button class="btn btn-sm btn-danger deletePostBtn" delete-id="{{id}}">Delete</button>
        </p>
    </div>
</div>

<script src="/js/editPost.js"></script>